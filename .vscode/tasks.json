{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build C++",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",               // Generate debug information
                "${file}",          // Compile the current file
                "-o",               // Output flag
                "${fileDirname}\\${fileBasenameNoExtension}.exe"  // Output file
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}